<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomCalendarView">
        <item name="android:background">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="CalendarWeekDayText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalendarDateText">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Styl dla wybranego dnia -->
    <style name="SelectedDayTheme">
        <item name="android:textColor">@color/calendar_selected_text</item>
        <item name="android:background">@color/calendar_highlight</item>
    </style>

    <!-- Styl dla aktualnego dnia -->
    <style name="CurrentDayTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/current_day_background</item>
    </style>
</resources> 