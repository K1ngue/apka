<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edytuj Spotkanie"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Imię -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imię:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Imię"
            android:minHeight="48dp"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/errorFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pole imię jest wymagane"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- Nazwisko -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwisko:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nazwisko"
            android:minHeight="48dp"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/errorLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pole nazwisko jest wymagane"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- Ulica -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ulica:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editTextStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ulica"
            android:minHeight="48dp"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/errorStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pole ulica jest wymagane"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- Numer domu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numer domu:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editTextHouseNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numer domu"
            android:minHeight="48dp"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/errorHouseNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pole numer domu jest wymagane"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- Miasto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miasto:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/editTextCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Miasto"
            android:minHeight="48dp"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/errorCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pole miasto jest wymagane"
            android:textColor="@android:color/holo_red_light"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- Kalendarz -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data spotkania:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/black"
            app:strokeColor="@color/card_border_gray"
            app:strokeWidth="1dp">

            <com.example.meetingassistant.calendar.CustomCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"/>

        </com.google.android.material.card.MaterialCardView>

        <!-- Czas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Godzina spotkania:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginBottom="16dp"
            android:theme="@style/TimePickerTheme"/>

        <!-- Powiadomienia -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Powiadomienia:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/editTextMinutesBefore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ile minut przed"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHint="#80FFFFFF"
                android:background="@drawable/edit_text_background"
                android:padding="8dp"/>

            <Button
                android:id="@+id/buttonAddNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dodaj"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/button_gray"/>

        </LinearLayout>

        <!-- Przyciski -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Anuluj"
                android:layout_marginEnd="8dp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/button_gray"/>

            <Button
                android:id="@+id/buttonSaveMeeting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Zapisz"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/button_gray"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
