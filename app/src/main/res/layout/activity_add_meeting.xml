<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imię:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/errorFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podaj imię!"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wpisz imię"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwisko:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/errorLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podaj nazwisko!"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wpisz nazwisko"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ulica:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/errorStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podaj ulicę!"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editTextStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wpisz nazwę ulicy"
            android:inputType="textPostalAddress"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numer domu/mieszkania:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/errorHouseNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podaj numer domu!"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editTextHouseNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wpisz numer"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miasto:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/errorCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Podaj miasto!"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14sp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editTextCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wpisz nazwę miasta"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="#80FFFFFF"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data spotkania:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/black"
            app:strokeColor="@color/card_border_gray"
            app:strokeWidth="1dp">

            <com.example.meetingassistant.calendar.CustomCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Godzina spotkania:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:timePickerMode="spinner"
            android:theme="@style/TimePickerTheme" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Przypomnienia:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/editTextNotificationTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ile minut przed"
                android:inputType="number"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHint="#80FFFFFF"
                android:background="@drawable/edit_text_background"
                android:padding="8dp"/>

            <Button
                android:id="@+id/buttonAddNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dodaj"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/button_gray"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Anuluj"
                android:layout_marginEnd="8dp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/button_gray"/>

            <Button
                android:id="@+id/buttonAddMeeting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dodaj"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/button_gray"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
